#include <stdio.h>

int
main ()
{
  int a;
  printf ("Enter a number\n");
  scanf ("%d", &a);
  if (a < 0)
    {
      printf ("%d The given number is negative", a);
    }
  else if (a > 0)
    {
      printf ("%d the given number is positive",a);
    }
  return 0;
}
