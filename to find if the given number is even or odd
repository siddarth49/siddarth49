#include <stdio.h>

int
main ()
{
  int num;

  printf ("To find if the given number is even or odd\n");
  scanf ("%d", &num);
  if (num %2 == 0)
    {
      printf ("%d is an EVEN number", num);
    }
  else
    {
      printf ("%d is ODD number", num);
    }
  return 0;
}
