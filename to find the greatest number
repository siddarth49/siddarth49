#include <stdio.h>

int
main ()
{
  int a, b, c;
  printf ("To find the greatest number\n");
  printf ("Enter three numbers\n");
  scanf ("%d%d%d", &a, &b, &c);
  if (a > b && a > c)
    {
      printf ("%d  is th3e greatest number", a);
    }
  else if (b > a && b > c)
    {
      printf ("%d is the greatest number", b);
    }
  else
    (c > b && c > a);
  {
    printf ("%d is the greatest number", c);
  }

  return 0;
}
